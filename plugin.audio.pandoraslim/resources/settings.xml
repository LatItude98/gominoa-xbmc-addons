<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<settings>
	<category label="General">
		<setting id="username" type="text" label="Username (email)"/>
		<setting id="password" type="text" label="Password" option="hidden"/>
		<setting id="pandoraone" type="bool" label="Pandora One" default="false"/>
		<setting type="sep"/>
		<setting id="save" type="bool" label="Save Tracks" default="false"/>
		<setting id="skip" type="bool" label="Skip Ads" default="false"/>
	</category>
	<category label="Advanced">
		<setting id="quality" type="enum" label="Audio Quality" values="Low|Medium|High" default="2"/>
		<setting id="sort" type="enum" label="Sort Stations" values="Newest|A-Z|Oldest" default="0"/>
		<setting id="listmax" type="slider" label="Playlist History" option="int" range="6,1,100" default="14"/>
		<setting id="time" type="slider" label="Cache Hours" option="int" range="3,1,24" default="24"/>
		<setting id="isad" type="slider" label="Advert Size" option="int" range="16,16,1024" default="256"/>
	</category>
	<category label="Folders">
		<setting id="lib" type="folder" label="Library" default="special://userdata/addon_data/plugin.audio.pandoraslim/Pandora"/>
		<setting id="m4a" type="folder" label="Cache" default="special://userdata/addon_data/plugin.audio.pandoraslim/Cache"/>
	</category>
</settings>
